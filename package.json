{
  "name": "cryptowallet-platform",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "backend",
    "web"
  ],
  "scripts": {
    "install:backend": "cd backend && npm install",
    "build": "cd backend && npm install && npm run prisma:generate && npm run build",
