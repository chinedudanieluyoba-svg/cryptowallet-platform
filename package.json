    "migrate": "cd backend && npx prisma migrate deploy"
  },
  "dependencies": {
    "@nestjs/typeorm": "^11.0.0",
    "pg": "^8.17.2",
    "typeorm": "^0.3.28"
  },
  "engines": {
    "node": ">=20.x"
  }
}